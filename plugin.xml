<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-xunfeiListenSpeaking" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>cordova-plugin-xunfeiListenSpeaking</name>

    <platform name = "android">
        <js-module name="xunfeiListenSpeaking" src="www/xunfeiListenSpeaking.js">
            <clobbers target="xunfeiListenSpeaking" />
        </js-module>
		<config-file target="app/src/main/res/xml/config.xml" parent="/*">
            <feature name="xunfeiListenSpeaking" >
                <param name="android-package" value="com.microduino.mDesigner.xunfeiListenSpeaking"/>
            </feature>
        </config-file>
        <source-file src="src/android/xunfeiListenSpeaking.java" target-dir="src/com/microduino/mDesigner" />

        <lib-file src="src/android/sdk/libs/Msc.jar" />
        <lib-file src="src/android/sdk/libs/Sunflower.jar" />

        <source-file src="src/android/sdk/jniLibs/arm64-v8a/libmsc.so" target-dir="src/main/jniLibs/arm64-v8a" />
        <source-file src="src/android/sdk/jniLibs/armeabi/libmsc.so" target-dir="src/main/jniLibs/armeabi" />
        <source-file src="src/android/sdk/jniLibs/armeabi-v7a/libmsc.so" target-dir="src/main/jniLibs/armeabi-v7a" />
        <source-file src="src/android/sdk/jniLibs/mips/libmsc.so" target-dir="src/main/jniLibs/mips" />
        <source-file src="src/android/sdk/jniLibs/mips64/libmsc.so" target-dir="src/main/jniLibs/mips64" />
        <source-file src="src/android/sdk/jniLibs/x86/libmsc.so" target-dir="src/main/jniLibs/x86" />
        <source-file src="src/android/sdk/jniLibs/x86_64/libmsc.so" target-dir="src/main/jniLibs/x86_64" />

    </platform>

    <platform name="ios">
        <js-module name="speech" src="www/Speech.js">
<!--            <clobbers target="navigator.speech" />-->
            <clobbers target="xunfeiListenSpeaking" />
        </js-module>
        <config-file parent="/*" target="config.xml">
            <feature name="Speech">
                <param name="ios-package" value="CDVSpeech" />
            </feature>
        </config-file>

        <config-file target="*-Info.plist" parent="NSMicrophoneUsageDescription">
            <string></string>
        </config-file>

        <header-file src="src/ios/CDVSpeech.h" />
        <source-file src="src/ios/CDVSpeech.m" />

        <framework src="AVFoundation.framework" />
        <framework src="AddressBook.framework" />
        <framework src="AudioToolbox.framework" />
        <framework src="SystemConfiguration.framework" />
        <framework src="QuartzCore.framework" />

        <framework src="libz.tbd" />
        <framework src="libc++.tbd" />
        <framework src="UIKit.framework" />
        <framework src="CoreGraphics.framework" />
        <framework src="Foundation.framework" />
        <framework src="CoreTelephony.framework" />
        <framework src="CoreLocation.framework" />
	<framework src="Contacts.framework" />

        <framework src="src/ios/iflyMSC.framework" custom="true" />
    </platform>

</plugin>
